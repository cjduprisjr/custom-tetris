{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GCC Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/a.out", // Path to your compiled executable
            "args": [], // Command-line arguments (if any)
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Set the current working directory
            "environment": [],
            "externalConsole": false, // Set to true to use an external console
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Path to GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
